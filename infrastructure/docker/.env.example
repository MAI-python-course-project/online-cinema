# ============================================
# Cinema Platform - Environment Configuration
# ============================================

# Environment
ENVIRONMENT=development
DEBUG=true

# ============================================
# PostgreSQL
# ============================================
POSTGRES_USER=cinema
POSTGRES_PASSWORD=cinema_dev_password
POSTGRES_DB=cinema
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================
# Redis
# ============================================
REDIS_PASSWORD=redis_dev_password
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# ClickHouse
# ============================================
CLICKHOUSE_USER=clickhouse
CLICKHOUSE_PASSWORD=clickhouse_dev_password
CLICKHOUSE_DB=analytics
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123

# ============================================
# Elasticsearch
# ============================================
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# ============================================
# MinIO (S3-compatible storage)
# ============================================
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio_dev_password
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=cinema-videos
MINIO_USE_SSL=false

# ============================================
# Kafka
# ============================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_ADVERTISED_HOST_NAME=localhost

# ============================================
# Microservices Ports
# ============================================
AUTH_SERVICE_PORT=8001
USER_SERVICE_PORT=8002
CATALOG_SERVICE_PORT=8003
SEARCH_SERVICE_PORT=8004
STREAMING_SERVICE_PORT=8005
ANALYTICS_SERVICE_PORT=8006
PAYMENT_SERVICE_PORT=8007
NOTIFICATION_SERVICE_PORT=8008

# ============================================
# API Gateway
# ============================================
NGINX_PORT=80
KONG_PROXY_PORT=8000
KONG_ADMIN_PORT=8001

# ============================================
# JWT
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ============================================
# External APIs (для production нужны реальные ключи)
# ============================================
SENDGRID_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
FCM_CREDENTIALS={}
YOOMONEY_SHOP_ID=
YOOMONEY_SECRET_KEY=
TMDB_API_KEY=

# ============================================
# Monitoring
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin
JAEGER_PORT=16686

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
ELASTICSEARCH_LOGS_HOST=elasticsearch-logs
KIBANA_PORT=5601
LOGSTASH_PORT=5044
