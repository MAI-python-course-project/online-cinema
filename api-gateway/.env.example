# ========================================
# API Gateway Configuration
# ========================================

# Domain Configuration
DOMAIN=api.cinema.example.com
PROTOCOL=http

# ========================================
# Kong Configuration
# ========================================

# Kong Proxy
KONG_PROXY_HTTP_PORT=8000
KONG_PROXY_HTTPS_PORT=8443

# Kong Admin API
KONG_ADMIN_API_PORT=8001
KONG_ADMIN_GUI_PORT=8002

# Kong Logging
KONG_LOG_LEVEL=info

# JWT Secrets (CHANGE IN PRODUCTION!)
KONG_JWT_SECRET=your-super-secret-jwt-key-change-in-production
KONG_ADMIN_JWT_SECRET=admin-jwt-secret-key-change-in-production

# ========================================
# NGINX Configuration
# ========================================

NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=4096

# ========================================
# Backend Services
# ========================================

# Auth Service
AUTH_SERVICE_HOST=auth-service
AUTH_SERVICE_PORT=8000

# User Service
USER_SERVICE_HOST=user-service
USER_SERVICE_PORT=8000

# Catalog Service
CATALOG_SERVICE_HOST=catalog-service
CATALOG_SERVICE_PORT=8000

# Search Service
SEARCH_SERVICE_HOST=search-service
SEARCH_SERVICE_PORT=8000

# Streaming Service
STREAMING_SERVICE_HOST=streaming-service
STREAMING_SERVICE_PORT=8000

# Analytics Service
ANALYTICS_SERVICE_HOST=analytics-service
ANALYTICS_SERVICE_PORT=8000

# Payment Service
PAYMENT_SERVICE_HOST=payment-service
PAYMENT_SERVICE_PORT=8000

# Notification Service
NOTIFICATION_SERVICE_HOST=notification-service
NOTIFICATION_SERVICE_PORT=8000

# ========================================
# Rate Limiting
# ========================================

# API Rate Limits
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_PER_HOUR=10000

# Auth Rate Limits (stricter)
AUTH_RATE_LIMIT_PER_MINUTE=20
AUTH_RATE_LIMIT_PER_HOUR=200

# Streaming Rate Limits (generous)
STREAM_RATE_LIMIT_PER_MINUTE=500
STREAM_RATE_LIMIT_PER_HOUR=20000

# ========================================
# Caching
# ========================================

# Cache TTL (seconds)
CATALOG_CACHE_TTL=300
SEARCH_CACHE_TTL=60

# ========================================
# Monitoring
# ========================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# ========================================
# Security
# ========================================

# CORS
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Accept,Authorization,Content-Type,Range

# SSL/TLS (for production)
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/key.pem

# ========================================
# Logging
# ========================================

# Log Level
LOG_LEVEL=info

# External Logging Service
LOGGING_SERVICE_HOST=logging-service
LOGGING_SERVICE_PORT=8080
